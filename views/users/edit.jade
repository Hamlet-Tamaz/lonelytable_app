extends ../layout.jade

block content
    h1 Please edit out your profile information
    h5 All fields are required
    form#newUser(action="/users/#{user.id}?_method=PUT" method='post')
        input(type="hidden", name="user[fb_id]", value='#{user.fb_id}')
        h4 Alias (what you want other people to see)
        input(type="textarea", name="user[alias]", value="#{user.alias}", required)
        h4 Profile picture 
        input(type="text", name="user[profile_pic]", value="#{user.profile_pic}" required)
        h4 A litte about you 
        input#large(type="text", name="user[blurb]", value="#{user.blurb}",required)
        br
        br
        input(type="submit", value="Edit your profile")
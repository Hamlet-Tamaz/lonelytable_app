extends ../layout.jade

block content
    h1 Please fill out your profile information
    h5 All fields are required
    form(action="/users?_method=PATCH" method='post')
        input(type="text", name="user[fb_id]", value='#{user.fb_id}')
        h4 Username
        input(type="text", name="user[username]", required)
        h4 Date of birth 
        input(type="date", name="user[dob]", required)
        h4 Profile picture 
        input(type="text", name="user[profile_pic]", required)
        h4 A litte about you 
        input(type="text", name="user[blurb]", required)
        input(type="submit", value="Complete Sign Up")
